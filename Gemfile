source 'https://rubygems.org'
ruby File.read('.ruby-version').chomp

gem 'rails', '~>7.2'

gem 'coffee-rails'
gem 'jquery-rails'
gem 'listen'
gem 'newrelic_rpm'
gem 'nokogiri'
gem 'pg'
gem 'puma'
